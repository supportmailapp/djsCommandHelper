{
  "compilerOptions": {
    "target": "ES2017",
    "module": "NodeNext",
    "rootDir": "./src",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [ "node" ]
  },
  "include": [ "./src/**/*.ts" ],
  "exclude": [ "node_modules", "dist" ]
}
